---
interface Props {
	title: string;
}

const { title } = Astro.props;

const  {currentLocale} = Astro
---

<!doctype html>
<html lang={currentLocale}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	html {
		font-family: Menlo,Monaco, Lucida Console,'Courier New',Courier, momonospace;
		background: #fff;
		
	}

	@media (width <= 80em) {

		section {
			display: block;
		}

		ul {
			display: block;
		}
		.projects {
			list-style: none;
			display: grid;
			grid-template-columns: repeat(
				auto-fit,
				minmax(200px,1fr)
				);
			gap: 1.5rem;
			margin-inline: -32px ;
		}
		#commands {
			display: none !important;
		}

		
	}

	a{
		text-decoration: none;
		margin: 0;
		padding: 0;
	}

	*,*::before,*::after {
		box-sizing: border-box;
	}

	@media (prefers-color-scheme: dark) {
		html{
			background: linear-gradient(45deg ,#30003a,#120913);
			color: #fff;
		}
	}

	h1,h2,h3,h4 {
		margin: 0;
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
	}

	p{
		color: #888;
		font-size: .8rem;
		line-height:1.5;
		margin: 0;
		text-wrap: pretty;
	}

	.print {
		display: none !important;
	}

	@media print {
		.no-print {
			display: none !important;
		}
	}

	@media print {
		.print {
			display: block !important;
		}
		figure {
			display: none !important;
		}

		a {
			color: #d1d1d1 !important;
		}
	}

</style>
