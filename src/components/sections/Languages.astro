---
import Section from "../Section.astro";

import {languages} from '@cv'

---

<Section title="Idiomas">

    <ul>
        {
            languages.map(({language, fluency}) => (

            <li>
                <h3>{language}</h3>
                <br>
                <h4>{fluency}</h4>
                <br>
            </li>
            ))
        }
    </ul>
</Section>

<style>
    
    h4 {
        color: #bebebe;

    }
</style>